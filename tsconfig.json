{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "paths": {
      "#common": [
        "./src/common/index.mjs"
      ],
      "#fat-json": [
        "./src/index.mjs"
      ],
      "#transformers": [
        "./src/transformers/index.mjs"
      ],
      "#types": [
        "./types/index.d.mts"
      ]
    }
  },
  "include": [
    ".",
    "./types"
  ],
  "exclude": [
    "./test"
  ]
}
